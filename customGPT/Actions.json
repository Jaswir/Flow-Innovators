paths:
  /query/:
    post:
      tags:
        - default
      summary: Query LangFlow
      operationId: Query Tutor Brain
      requestBody:
        content:
          application/json:
            schema:
              type: object
              properties:
                question:
                  type: string
                  description: The question to query LangFlow
              example:
                question: "Backstory: the student failed the exam, 3 times. Student Experience: I can understand the topics generally
                  but I can't understand the mathematical formulations, my biggest challenges for the course is to
                  understand mathematical formulations"
              required:
                - question
      responses:
        "200":
          description: Successful response
          content:
            application/json: {}
