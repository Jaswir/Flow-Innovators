    post:
      operationId: Add File to Tutor Brain
      description: ""
      requestBody:
        content:
          application/json:
            schema:
              type: object
              properties:
                file_text:
                  type: string
              required:
                - file_text
      responses:
        "200":
          description: Success
      tags:
        - addfile_tutorbrain
